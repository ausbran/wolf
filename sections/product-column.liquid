{{ 'section-product-column.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile
    assign show_mobile_slider = true
  endif

  assign number_of_columns = 3
  assign number_of_columns_mobile = section.settings.columns_mobile
  assign grid_space_desktop = number_of_columns | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
  assign grid_space_tablet = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
  assign grid_space_mobile = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | divided_by: 2 | plus: 30 | append: 'px'
  if section.settings.image_width == 'half'
    assign image_width = 0.5
  elsif section.settings.image_width == 'third'
    assign image_width = 0.33
  else
    assign image_width = 1
  endif
-%}

<div class="multicolumn product-columns color-{{ section.settings.color_scheme }} gradient{% if section.settings.title == blank %} no-heading{% endif %}">
  <div
    class="section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <slider-component class="slider-mobile-gutter">
      <ul
        class="multicolumn-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--3-col-desktop{% if show_mobile_slider %} slider slider--mobile grid--peek{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
      >
          <li
            id="image1"
            class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}id="video1"
              data-cascade
            {% endif %}>
            <div class="multicolumn-card content-container">
              {%- if section.settings.image1 != blank -%}
                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                      <div class="media media--transparent media--{{ section.settings.image_ratio }}">
                          {% capture sizes %}
                              (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ grid_space_desktop }}) * {{ image_width }} /  {{ number_of_columns }}),
                              (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) * {{ image_width }} / {{ number_of_columns }}),
                              (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) * {{ image_width }} / {{ number_of_columns_mobile }}),
                              calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                          {% endcapture %}
                          {{
                              section.settings.image1
                              | image_url: width: 3200
                              | image_tag:
                                  widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                                  sizes: sizes,
                                  class: 'multicolumn-card__image'
                          }}
                      </div>
                  </div>
              {%- endif -%}
              <div class="multicolumn-card__info">
                  {%- if section.settings.title1 != blank -%}
                      <h3 class="inline-richtext">{{ section.settings.title1 }}</h3>
                  {%- endif -%}
                  {%- if section.settings.text1 != blank -%}
                      <div class="rte">{{ section.settings.text1 }}</div>
                  {%- endif -%}
              </div>
          </div>
          </li>

          <li
            id="image2"
            class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} {% if section.settings.image2 == blank and section.settings.video2 == blank %} placeholder{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
            {% endif %}>
            <div class="multicolumn-card content-container">
              {%- if section.settings.video2 != blank -%}
                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                    <div class="media media--transparent media--{{ section.settings.image_ratio }}">
                     {% assign videoId = 'video' %}

{{ section.settings.video2 | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, preload: false, id: videoId }}

                    </div>
                  </div>
              {%- elsif section.settings.image2 != blank -%}
                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                      <div class="media media--transparent media--{{ section.settings.image_ratio }}">
                          {% capture sizes %}
                              (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ grid_space_desktop }}) * {{ image_width }} /  {{ number_of_columns }}),
                              (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) * {{ image_width }} / {{ number_of_columns }}),
                              (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) * {{ image_width }} / {{ number_of_columns_mobile }}),
                              calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                          {% endcapture %}
                          {{
                              section.settings.image2
                              | image_url: width: 3200
                              | image_tag:
                                  widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                                  sizes: sizes,
                                  class: 'multicolumn-card__image'
                          }}
                      </div>
                  </div>
              {%- endif -%}
              <div class="multicolumn-card__info">
                  {%- if section.settings.title2 != blank -%}
                      <h3 class="inline-richtext">{{ section.settings.title2 }}</h3>
                  {%- endif -%}
                  {%- if section.settings.text2 != blank -%}
                      <div class="rte">{{ section.settings.text2 }}</div>
                  {%- endif -%}
              </div>
          </div>
          </li>

          <li
            id="image3"
            class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
            {% endif %}>
            <div class="multicolumn-card content-container">
              <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                <div class="media media--transparent media--{{ section.settings.image_ratio }}">
                  <ul class="product-slider">
                      {% for product in product.metafields.custom.pictured_with_products.value %}
                        <li>
                          <img src="{{ product.featured_image.src | product_img_url: 'large' }}" alt="{{ product.title }}">
                          <a href="{{ product.url }}">
                            {{ product.title | escape | replace: ' - Made To Order', '' }}
                            {% render "icon-caret" %}
                          </a>
                        </li>
                      {% endfor %}
                  </ul>
                  <div class="slider-progress-container">
                      <div class="slider-progress-bar" style="width: 0%;"></div>
                  </div>
                </div>
              </div>
              <div class="multicolumn-card__info">
                {%- if section.settings.title3 != blank -%}
                  <h3 class="inline-richtext">{{ section.settings.title3 }}</h3>
                {%- endif -%}
                {%- if section.settings.text3 != blank -%}
                  <div class="rte">{{ section.settings.text3 }}</div>
                {%- endif -%}
              </div>
            </div>
          </li>
      </ul>
    </slider-component>
  </div>
</div>

<script>
let currentIndex = 0;
    const slides = document.querySelectorAll('.product-slider li');
    const progressBar = document.querySelector('.slider-progress-bar');
    let slideInterval;

    // Set slide duration in milliseconds
    const slideDuration = 4000;

    function showSlide(index) {
        slides.forEach((slide, i) => {
            slide.style.opacity = i === index ? '1' : '0';
        });
        // Reset progress bar for the next slide
        progressBar.style.width = '0%';
        animateProgressBar();
    }

    function nextSlide() {
        currentIndex = (currentIndex + 1) % slides.length;
        showSlide(currentIndex);
    }

    function animateProgressBar() {
        let start = Date.now();
        slideInterval = setInterval(() => {
            let timePassed = Date.now() - start;
            let progress = (timePassed / slideDuration) * 100;
            if (progress >= 100) {
                clearInterval(slideInterval);
                nextSlide();
            } else {
                progressBar.style.width = progress + '%';
            }
        }, 10);
    }

    // Example function to change progress bar color dynamically
    function changeProgressBarColor(color) {
        progressBar.style.backgroundColor = color;
    }

    // Initialize the slideshow on the first slide
    showSlide(currentIndex);


  var video = document.getElementById('video');

  var options = {
    root: null,
    rootMargin: '0px',
    threshold: 0
  };

  var observer = new IntersectionObserver(handleIntersection, options);

  observer.observe(video);

  function handleIntersection(entries, observer) {
    entries.forEach(function(entry) {
      if (entry.isIntersecting) {
        if (!isVideoPlaying()) {
          video.play();
        }
      } else {
        if (isVideoPlaying()) {
          video.pause();
        }
      }
    });
  }

  function isVideoPlaying() {
    return !video.paused;
  }

</script>

