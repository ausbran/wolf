{{ 'section-image-banner-masked.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image-mask-section section-{{ section.id }}-padding {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="image-mask-container">
    <div class="image-mask left" style="background-image: url({{ section.settings.image-left | image_url: width: 600 }});"></div>
    <div class="image-mask center" style="background-image: url({{ section.settings.image-center | image_url: width: 1500 }});"></div>
    <div class="image-mask right" style="background-image: url({{ section.settings.image-right | image_url: width: 600 }});"></div>
  </div>
  <div class="text">
    <h2 class="banner__heading inline-richtext {{ section.settings.heading_size }}"
              {{ section.shopify_attributes }}>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.paragraph }}</p>
    <a href="{{ section.settings.button_url }}" class="cta-button button">{{ section.settings.button_text }}</a>
  </div>
</div>


{% javascript %}

{% endjavascript %}


{% schema %}
{
  "name": "Masked Image Banner",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image-left",
      "label": "Choose Left Image"
    },
    {
      "type": "image_picker",
      "id": "image-center",
      "label": "Choose Center Image"
    },
    {
      "type": "image_picker",
      "id": "image-right",
      "label": "Choose Right Image"
    },
    {
      "type": "text",
      "label": "Headline",
      "id": "heading"
    },
    {
      "type": "textarea",
      "label": "Paragraph",
      "id": "paragraph"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text"
    },
    {
      "type": "url",
      "label": "Button URL",
      "id": "button_url"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Masked Image Banner"
    }
  ]
}

{% endschema %}